# Auto detect text files and perform LF normalization
* text=auto

# Dart files
*.dart text eol=lf
*.yaml text eol=lf
*.yml text eol=lf
*.json text eol=lf

# Shell scripts
*.sh text eol=lf

# Documentation
*.md text eol=lf

# Build files
*.gradle text eol=lf
*.properties text eol=lf
gradlew text eol=lf

# Web files
*.html text eol=lf
*.css text eol=lf
*.js text eol=lf
*.jsx text eol=lf

# Binary files
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.ttf binary
*.otf binary
*.woff binary
*.woff2 binary
